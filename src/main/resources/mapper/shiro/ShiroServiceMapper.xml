    <select id="getAllRolesByUserId" parameterType="long" resultMap="RoleResultMap">
        SELECT role.role_id,role.role_name,user_role.uid FROM role
        LEFT JOIN user_role ON role.role_id = user_role.role_id WHERE user_role.uid=#{uid}
    </select>

    <select id="getAllUsersByRoleId" parameterType="long" resultMap="UserResultMap">
        SELECT * FROM user LEFT JOIN user_role ON user.uid = user_role.uid WHERE user_role.role_id=#{roleId};
    </select>

    <select id="getAllGroupsByUserId" parameterType="long" resultMap="MyGroupResultMap">
        SELECT * FROM group LEFT JOIN group_user ON group.group_id = group_user.group_id WHERE group_user.uid=#{uid}
    </select>

    <delete id="removeUserFromRole" parameterType="map">
        DELETE FROM user_role WHERE user_role.role_id=#{roleId} AND user_role.uid=#{uid}
    </delete>

